{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "_comment": "DTF Security Level 2 â€” Project Standard. Copy to <monorepo>/.claude/settings.json and commit.",
  "permissions": {
    "allow": [
      "Bash(npm run *)",
      "Bash(npm install*)",
      "Bash(npx *)",
      "Bash(dotnet *)",
      "Bash(git status*)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git branch*)",
      "Bash(git stash*)",
      "Bash(git fetch*)",
      "Bash(git checkout*)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git pull*)",
      "Bash(git push)",
      "Bash(git push origin *)",
      "Bash(git push -u *)",
      "Bash(git worktree *)",
      "Bash(git rebase *)",
      "Bash(gh *)",
      "Bash(acli *)",
      "Bash(tmux *)",
      "Bash(docker *)",
      "Bash(docker-compose *)",
      "Bash(ls *)",
      "Bash(mkdir *)",
      "Bash(cp *)",
      "Bash(chmod *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(wc *)",
      "Bash(pwd)",
      "Bash(lsof *)",
      "Bash(ps *)",
      "Bash(sleep *)",
      "Bash(bash ~/.claude/scripts/*)",
      "Bash(bash scripts/*)",
      "Bash(open *)"
    ],
    "deny": [
      "Read(.env*)",
      "Read(**/.ssh/**)",
      "Read(**/*credential*)",
      "Read(**/*secret*)",
      "Bash(curl *)",
      "Bash(wget *)",
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(git push --force *)",
      "Bash(git reset --hard*)",
      "Bash(git clean -fd*)"
    ]
  }
}
