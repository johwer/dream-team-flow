{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "preferences": {
    "tmuxSplitPanes": true
  },
  "skipDangerousModePermissionPrompt": true,
  "effortLevel": "medium",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/tool-usage-log.sh",
            "timeout": 5,
            "async": true
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/migration-guard.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "~/.claude/scripts/lockfile-guard.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "~/.claude/scripts/auto-lint-notify.sh",
            "timeout": 5,
            "async": true
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude Code needs your attention\" with title \"Claude Code\"'",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
